@model VerbaleViewModel

@{
    ViewData["Title"] = "Compilazione Verbale";
}

<h2 class="text-center">Compilazione Nuovo Verbale</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="IdAnagrafica" class="form-label">ID Trasgressore</label>
        <input asp-for="IdAnagrafica" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="DataViolazione" class="form-label">Data Violazione</label>
        <input asp-for="DataViolazione" type="date" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="IndirizzoViolazione" class="form-label">Indirizzo Violazione</label>
        <input asp-for="IndirizzoViolazione" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="NominativoAgente" class="form-label">Nominativo Agente</label>
        <input asp-for="NominativoAgente" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="DataTrascrizioneVerbale" class="form-label">Data Trascrizione Verbale</label>
        <input asp-for="DataTrascrizioneVerbale" type="date" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="Importo" class="form-label">Importo (€)</label>
        <input asp-for="Importo" type="number" step="0.01" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Registra Verbale</button>
    <a href="/Verbale" class="btn btn-secondary">Annulla</a>
</form>

<a href="/" class="btn btn-secondary mt-3">Torna alla Home</a>
