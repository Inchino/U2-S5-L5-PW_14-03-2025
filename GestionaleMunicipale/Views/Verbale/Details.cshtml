@{
    ViewData["Title"] = "Dettagli Verbale";
}

<div class="container mt-5">
    <h2 class="text-center">Dettagli Verbale</h2>

    <div class="card p-4 mt-4">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>ID Verbale:</strong> <span id="idVerbale"></span></li>
            <li class="list-group-item"><strong>Data Violazione:</strong> <span id="dataViolazione"></span></li>
            <li class="list-group-item"><strong>Indirizzo Violazione:</strong> <span id="indirizzo"></span></li>
            <li class="list-group-item"><strong>Agente:</strong> <span id="agente"></span></li>
            <li class="list-group-item"><strong>Data Trascrizione:</strong> <span id="dataTrascrizione"></span></li>
            <li class="list-group-item"><strong>Importo:</strong> <span id="importo"></span></li>
        </ul>
        <div class="mt-3">
            <a href="/Verbale" class="btn btn-secondary">Torna alla lista</a>
        </div>
    </div>
</div>