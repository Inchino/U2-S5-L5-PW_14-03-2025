@model VerbaleViewModel

@{
    ViewData["Title"] = "Dettagli Verbale";
}

<h2 class="text-center">Dettagli Verbale</h2>

<ul class="list-group">
    <li class="list-group-item"><strong>ID Verbale:</strong> @Model.IdVerbale</li>
    <li class="list-group-item"><strong>Data Violazione:</strong> @Model.DataViolazione.ToShortDateString()</li>
    <li class="list-group-item"><strong>Indirizzo Violazione:</strong> @Model.IndirizzoViolazione</li>
    <li class="list-group-item"><strong>Nominativo Agente:</strong> @Model.NominativoAgente</li>
    <li class="list-group-item"><strong>Data Trascrizione Verbale:</strong> @Model.DataTrascrizioneVerbale.ToShortDateString()</li>
    <li class="list-group-item"><strong>Importo:</strong> @Model.Importo.ToString("C")</li>
</ul>

<a href="/Verbale" class="btn btn-secondary mt-3">Torna alla lista</a>
<a href="/" class="btn btn-secondary mt-3">Torna alla Home</a>