@model List<VerbaleViewModel>

@{
    ViewData["Title"] = "Verbali";
}

<h2 class="text-center">Lista Verbali</h2>

<a href="/Verbale/Create" class="btn btn-success mb-3">Compila Nuovo Verbale</a>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>ID Verbale</th>
            <th>Data Violazione</th>
            <th>Indirizzo</th>
            <th>Agente</th>
            <th>Importo</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var verbale in Model)
        {
            <tr>
                <td>@verbale.IdVerbale</td>
                <td>@verbale.DataViolazione.ToShortDateString()</td>
                <td>@verbale.IndirizzoViolazione</td>
                <td>@verbale.NominativoAgente</td>
                <td>@verbale.Importo.ToString("C")</td>
                <td>
                    <a href="/Verbale/Details/@verbale.IdVerbale" class="btn btn-info btn-sm">Dettagli</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/" class="btn btn-secondary mt-3">Torna alla Home</a>
