@model List<TipoViolazioneViewModel>

@{
    ViewData["Title"] = "Violazioni Contestabili";
}

<h2 class="text-center">Elenco Violazioni Contestabili</h2>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>ID Violazione</th>
            <th>Descrizione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var violazione in Model)
        {
            <tr>
                <td>@violazione.IdViolazione</td>
                <td>@violazione.Descrizione</td>
            </tr>
        }
    </tbody>
</table>

<a href="/" class="btn btn-secondary mt-3">Torna alla Home</a>
