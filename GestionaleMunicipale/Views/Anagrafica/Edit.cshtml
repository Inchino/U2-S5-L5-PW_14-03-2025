@model AnagraficaViewModel

@{
    ViewData["Title"] = "Modifica Trasgressore";
}

<h2 class="text-center">Modifica Trasgressore</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdAnagrafica" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="Cognome" class="form-label">Cognome</label>
        <input asp-for="Cognome" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="Indirizzo" class="form-label">Indirizzo</label>
        <input asp-for="Indirizzo" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Citta" class="form-label">Città</label>
        <input asp-for="Citta" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="CAP" class="form-label">CAP</label>
        <input asp-for="CAP" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="CodiceFiscale" class="form-label">Codice Fiscale</label>
        <input asp-for="CodiceFiscale" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Salva Modifiche</button>
    <a href="/Anagrafica" class="btn btn-secondary">Annulla</a>
</form>
