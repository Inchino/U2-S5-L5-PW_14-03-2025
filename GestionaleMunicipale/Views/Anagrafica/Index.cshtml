@model List<AnagraficaViewModel>

@{
    ViewData["Title"] = "Lista Trasgressori";
}

<h2 class="text-center">Lista Trasgressori</h2>

<a href="/Anagrafica/Create" class="btn btn-success mb-3">Aggiungi Trasgressore</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trasgressore in Model)
        {
            <tr>
                <td>@trasgressore.Nome</td>
                <td>@trasgressore.Cognome</td>
                <td>@trasgressore.Indirizzo</td>
                <td>@trasgressore.Citta</td>
                <td>@trasgressore.CAP</td>
                <td>@trasgressore.CF</td>
                <td>
                    <a href="/Anagrafica/Edit/@trasgressore.IdAnagrafica" class="btn btn-warning btn-sm">Modifica</a>
                    <a href="/Anagrafica/Details/@trasgressore.IdAnagrafica" class="btn btn-info btn-sm">Dettagli</a>
                    <form action="/Anagrafica/Delete/@trasgressore.IdAnagrafica" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Sei sicuro di voler eliminare questo trasgressore?');">Elimina</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

