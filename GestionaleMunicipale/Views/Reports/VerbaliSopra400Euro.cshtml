@model List<GestionaleMunicipale.ViewModels.ReportVerbaliSopra400EuroViewModel>

@{
    ViewData["Title"] = "Report Verbali sopra 400€";
}

<h2>Verbali con Importo > 400 Euro</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Data Violazione</th>
            <th>Importo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.DataViolazione.ToShortDateString()</td>
                <td>@item.Importo.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Reports" class="btn btn-secondary mt-3">Torna ai Report</a>
<a href="/" class="btn btn-secondary mt-3">Torna alla Home</a>