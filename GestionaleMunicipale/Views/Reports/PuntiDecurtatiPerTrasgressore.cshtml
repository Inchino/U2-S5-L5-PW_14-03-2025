@model List<GestionaleMunicipale.ViewModels.ReportPuntiDecurtatiPerTrasgressoreViewModel>

@{
    ViewData["Title"] = "Report Punti Decurtati per Trasgressore";
}

<h2>Punti Decurtati per Trasgressore</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Totale Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.TotalePuntiDecurtati</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Reports" class="btn btn-secondary mt-3">Torna ai Report</a>
<a href="/" class="btn btn-secondary mt-3">Torna alla Home</a>
