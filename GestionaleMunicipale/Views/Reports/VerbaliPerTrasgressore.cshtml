@model List<ReportVerbaliPerTrasgressoreViewModel>

@{
    ViewData["Title"] = "Report Verbali per Trasgressore";
}

<h2 class="text-center">Report Verbali per Trasgressore</h2>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>Trasgressore</th>
            <th>Totale Verbali</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.Nome @report.Cognome</td>
                <td>@report.TotaleVerbali</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Reports" class="btn btn-secondary mt-3">Torna ai Report</a>
<a href="/" class="btn btn-secondary mt-3">Torna alla Home</a>
